# Define colors
BLUE="\[\033[0;34m\]"
RED="\[\033[0;31m\]"
GREEN="\[\033[0;32m\]"
BOLD="\033[1m"
RESET="\[\033[0m\]"

# Define prompt
if [ -z "$GIT_BRANCH" ]; then
   PS1="\n╭ ${BLUE}\u${RESET} @ ${RED}\h${RESET}\n╰ \w | ${GREEN}₿${RESET} "
else
   PS1="\n╭ ${BLUE}\u${RESET} @ ${RED}\h${RESET} ${BOLD}[$GIT_BRANCH]${RESET}\n╰ \w | ${GREEN}₿${RESET} "
fi
