# Define colors
BLUE="\[\033[0;34m\]"
RED="\[\033[0;31m\]"
GREEN="\[\033[0;32m\]"
BOLD="\033[1m"
RESET="\[\033[0m\]"

# Define prompt
if [ -z "$GIT_BRANCH" ]; then
   PS1="${BLUE}\u${RESET}@${RED}\h${RESET} \W ${GREEN} >${RESET} "
else
   PS1="${BLUE}\u${RESET}@${RED}\h${RESET} âŽ‡  $GIT_BRANCH \W ${GREEN}>${RESET} "
fi
