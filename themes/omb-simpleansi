# Define colors
BLUE="\[\033[0;34m\]"
RED="\[\033[0;31m\]"
GREEN="\[\033[0;32m\]"
RESET="\[\033[0m\]"

# Define prompt
if [ -z "$GIT_BRANCH" ]; then
   PS1="\n${BLUE}\u${RESET} @ ${RED}\h${RESET}\n\w | ${GREEN}₿${RESET} "
else
   PS1="\n${BLUE}\u${RESET} @ ${RED}\h${RESET} G @$GIT_BRANCH\n\w | ${GREEN}₿${RESET} "
fi
