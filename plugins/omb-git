# Define the function to run when directory changes
_git-plugin-trap() {
  echo -n
  export GIT_BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo)"
  refresh_theme
}

# Run the function when prompt displayed
export PROMPT_COMMAND="_git-plugin-trap"

# Aliases
alias gp="git push"
alias gcf="git config --list"
alias gl="git pull"
alias gc="git commit"
alias gs="git stash"
alias gsd="git stash ."
