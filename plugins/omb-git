# wip
# Define the function to run when directory changes
_git-plugin-trap() {
  export GIT_BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo)"
  refresh_theme
}

# Execute the function when prompt is displayed
export PROMPT_FUNCTION="_git-plugin-trap"

# Aliases
alias gp="git push"
alias gcf="git config --list"
alias gl="git pull"
alias gc="git commit"
alias gs="git stash"
alias gsd="git stash ."
